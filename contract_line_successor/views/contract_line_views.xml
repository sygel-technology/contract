<odoo>
    <record id="contract_line_relation_form_view" model="ir.ui.view">
        <field name="name">contract.line.relation.form.view</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_form_view" />
        <field name="arch" type="xml">
            <field name="create_invoice_visibility" position="after">
                <field name="is_stop_plan_successor_allowed" invisible="1" />
            </field>
            <xpath expr="//field[@name='manual_renew_needed']/.." position="after">
                <group>
                    <field name="predecessor_contract_line_id" />
                </group>
                <group>
                    <field name="successor_contract_line_id" />
                </group>
            </xpath>
        </field>
    </record>
    <record id="contract_line_relation_tree_view" model="ir.ui.view">
        <field name="name">contract.line.relation.tree.view</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_tree_view" />
        <field name="arch" type="xml">
            <field name="create_invoice_visibility" position="after">
                <field name="is_plan_successor_allowed" column_invisible="True" />
                <field name="is_stop_plan_successor_allowed" column_invisible="True" />
            </field>
            <field name="is_canceled" position="after">
                <button
                    name="action_plan_successor"
                    title="Plan Start"
                    type="object"
                    icon="fa-calendar text-success"
                    invisible="not is_plan_successor_allowed"
                />
                <button
                    name="action_stop_plan_successor"
                    title="Stop Plan Successor"
                    type="object"
                    icon="fa-pause text-muted"
                    invisible="not is_stop_plan_successor_allowed"
                />
            </field>
        </field>
    </record>
</odoo>
