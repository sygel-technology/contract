<odoo>
    <record id="contract_contract_line_relation_form_view" model="ir.ui.view">
        <field name="name">contract.contract.line.relation.form.view</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='contract_line_fixed_ids']//field[@name='create_invoice_visibility']"
                position="after"
            >
                <field name="is_plan_successor_allowed" column_invisible="True" />
            </xpath>
            <xpath
                expr="//field[@name='contract_line_ids']//field[@name='create_invoice_visibility']"
                position="after"
            >
                <field name="is_plan_successor_allowed" column_invisible="True" />
                <field name="is_stop_plan_successor_allowed" column_invisible="True" />
            </xpath>
            <xpath
                expr="//field[@name='contract_line_ids']//field[@name='is_canceled']"
                position="after"
            >
                <button
                    name="action_plan_successor"
                    string="Plan Start"
                    type="object"
                    icon="fa-calendar text-success"
                    invisible="not is_plan_successor_allowed"
                />
                <button
                    name="action_stop_plan_successor"
                    string="Stop Plan Successor"
                    type="object"
                    icon="fa-pause text-muted"
                    invisible="not is_stop_plan_successor_allowed"
                />
            </xpath>
        </field>
    </record>
</odoo>
