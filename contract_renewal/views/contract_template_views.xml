<odoo>
    <record id="contract_renewal_template_form_view" model="ir.ui.view">
        <field name="name">contract.renewal.template.form.view</field>
        <field name="model">contract.template</field>
        <field name="inherit_id" ref="contract.contract_template_form_view" />
        <field name="arch" type="xml">
            <field name="quantity" position="after">
                <field name="is_auto_renew" column_invisible="True" />
            </field>
            <field name="automatic_price" position="attributes">
                <attribute
                    name="column_invisible"
                >parent.contract_type == 'purchase' and not is_auto_renew</attribute>
            </field>
        </field>
    </record>
</odoo>
