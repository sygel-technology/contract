<odoo>
    <record id="contract_line_renewal_form_view" model="ir.ui.view">
        <field name="name">contract.line.renewal.form.view</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='termination_notice_date']/.." position="after">
                <group>
                    <field name="manual_renew_needed" />
                </group>
            </xpath>
            <field name="date_end" position="attributes">
                <attribute name="required">is_auto_renew</attribute>
            </field>
        </field>
    </record>
    <record id="contract_line_renewal_tree_view" model="ir.ui.view">
        <field name="name">contract.line.renewal.tree.view</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_tree_view" />
        <field name="arch" type="xml">
            <field name="is_un_cancel_allowed" position="after">
                <field name="manual_renew_needed" column_invisible="True" />
                <field name="is_auto_renew" column_invisible="True" />
            </field>
            <button name="action_uncancel" position="after">
                <button
                    name="renew"
                    title="Renew"
                    type="object"
                    icon="fa-fast-forward text-success"
                    groups="base.group_no_one"
                    invisible="not manual_renew_needed"
                />
            </button>
        </field>
    </record>
</odoo>
